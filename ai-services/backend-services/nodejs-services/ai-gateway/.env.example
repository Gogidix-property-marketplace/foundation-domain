# Server Configuration
PORT=8000
NODE_ENV=development
API_BASE_URL=http://localhost:8000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ai-gateway
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_SALT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004,http://localhost:3005,http://localhost:3006
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Service Configuration
SERVICES_PORT_BASE=3000
SERVICES_TIMEOUT=5000
SERVICES_RETRY_ATTEMPTS=3
SERVICES_RETRY_DELAY=1000

# External AI Services
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
SAGEMAKER_ENDPOINT_URL=your-sagemaker-endpoint-here

# Monitoring
PROMETRICS_ENABLED=true
METRICS_PATH=/metrics
HEALTH_CHECK_INTERVAL=30000

# Performance
COMPRESSION_ENABLED=true
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000
MAX_CONNECTIONS=100

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
ENABLE_CACHE=true

# File Upload
MAX_FILE_SIZE=10mb
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain,application/json

# Rate Limiting
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX=1000
STRICT_RATE_LIMIT_WINDOW_MS=900000
STRICT_RATE_LIMIT_MAX=100

# API Versioning
DEFAULT_API_VERSION=v1
SUPPORTED_API_VERSIONS=v1,v2
API_VERSION_HEADER=x-api-version

# Development Settings
DEBUG=false
VERBOSE=false
SHOW_SQL_QUERIES=false

# Production Settings
SSL_ENABLED=false
SESSION_SECRET=your-session-secret-key-change-in-production
COOKIE_SECRET=your-cookie-secret-key-change-in-production
CSRF_SECRET=your-csrf-secret-key-change-in-production