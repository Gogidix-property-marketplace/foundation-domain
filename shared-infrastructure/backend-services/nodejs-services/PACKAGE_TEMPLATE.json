{
  "name": "{{SERVICE_NAME}}",
  "version": "1.0.0",
  "description": "{{SERVICE_DESCRIPTION}}",
  "main": "src/server.js",
  "type": "commonjs",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "debug": "node --inspect src/server.js",
    "debug:brk": "node --inspect-brk src/server.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:smoke": "jest --testPathPattern=smoke --passWithNoTests",
    "lint": "eslint src/**/*.js tests/**/*.js --fix",
    "lint:check": "eslint src/**/*.js tests/**/*.js",
    "format": "prettier --write src/**/*.js tests/**/*.js *.json *.md",
    "format:check": "prettier --check src/**/*.js tests/**/*.js *.json *.md",
    "validate": "npm run lint:check && npm run format:check && npm run test:coverage",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "build": "echo 'No build step required for Node.js'",
    "postbuild": "echo 'Build completed'",
    "docker:build": "docker build -t {{SERVICE_NAME}} .",
    "docker:run": "docker run -p 3000:3000 {{SERVICE_NAME}}",
    "docker:push": "docker push {{DOCKER_REGISTRY}}/{{SERVICE_NAME}}:${npm_package_version}",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "dependency:check": "ncu",
    "dependency:update": "ncu -u",
    "start:prod": "NODE_ENV=production node src/server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "health": "curl -f http://localhost:${PORT:-3000}/health || exit 1",
    "metrics": "curl http://localhost:${PORT:-3000}/metrics",
    "performance:test": "artillery run tests/performance/load-test.yml"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.0",
    "express-validator": "^7.0.1",
    "xss": "^1.0.14",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3",
    "validator": "^13.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "axios": "^1.6.2",
    "winston": "^3.11.0",
    "winston-elasticsearch": "^0.17.3",
    "prom-client": "^15.0.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@opentelemetry/exporter-jaeger": "^1.21.0",
    "@opentelemetry/instrumentation-express": "^0.38.0",
    "@opentelemetry/instrumentation-http": "^0.45.0",
    "@opentelemetry/resources": "^1.21.0",
    "@opentelemetry/semantic-conventions": "^1.21.0",
    "http-status-codes": "^2.3.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "uuid": "^9.0.1",
    "chalk": "^4.1.2",
    "debug": "^4.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "babel-jest": "^29.7.0",
    "artillery": "^2.0.3",
    "jest-junit": "^16.0.0",
    "jest-html-reporters": "^3.1.5",
    "jest-watch-typeahead": "^2.2.2",
    "nock": "^13.4.0",
    "sinon": "^17.0.1",
    "nyc": "^15.1.0",
    "pm2": "^5.3.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "npm-check-updates": "^16.14.11"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "tests/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/config/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "nyc": {
    "exclude": [
      "src/config/**",
      "tests/**",
      "**/node_modules/**"
    ]
  },
  "keywords": [
    "nodejs",
    "express",
    "microservice",
    "gogidix",
    "infrastructure",
    "production"
  ],
  "author": {
    "name": "Gogidix Development Team",
    "email": "dev@gogidix.com",
    "url": "https://gogidix.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gogidix/infrastructure-services.git",
    "directory": "nodejs-services/{{SERVICE_NAME}}"
  },
  "bugs": {
    "url": "https://github.com/gogidix/infrastructure-services/issues"
  },
  "homepage": "https://github.com/gogidix/infrastructure-services/tree/main/nodejs-services/{{SERVICE_NAME}}#readme"
}